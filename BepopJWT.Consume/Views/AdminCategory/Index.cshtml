@model List<BepopJWT.Consume.CategoryDTOs.ResultCategoryDTO>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kategori Listesi</h2>
        <a href="@Url.Action("CreateCategory", "AdminCategory")" class="btn btn-success">Yeni Kategori Ekle</a>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Açıklama</th>
                <th scope="col">Oluşturulma Tarihi</th>
                <th scope="col" style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                int index = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>@item.CategoryName</td>
                        <td>
                            <a href="@Url.Action("UpdateCategory", "AdminCategory", new { id = item.CategoryId })" class="btn btn-primary btn-sm me-1">Düzenle</a>
                            <a href="@Url.Action("DeleteCategory", "AdminCategory", new { id = item.CategoryId })" class="btn btn-danger btn-sm" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Hiç kategori bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
