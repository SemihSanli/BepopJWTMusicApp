@model LoginDTO
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Giriş Yap | Bebop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" href="/Bebop/assets/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="/Bebop/assets/css/theme.css" type="text/css" />

    <style>
        /* Profesyonel Tasarım Dokunuşları */
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Inter', -apple-system, sans-serif;
            overflow: hidden;
        }

        /* Arka plan katmanı: Hem resim hem mesh gradient */
        .auth-wrapper {
            background: linear-gradient(135deg, rgba(30, 11, 54, 0.9) 0%, rgba(193, 38, 104, 0.5) 100%), url('/Bebop/assets/img/b6.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Glassmorphism Form Kartı */
        .glass-card {
            background: rgba(255, 255, 255, 0.07);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 3rem;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease;
        }

            .glass-card:hover {
                transform: translateY(-5px);
            }

        /* Input Modernizasyonu */
        .form-control {
            background: rgba(255, 255, 255, 0.05) !important;
            border: 1px solid rgba(255, 255, 255, 0.1) !important;
            color: #fff !important;
            border-radius: 12px;
            padding: 12px 15px;
            transition: all 0.3s;
        }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.1) !important;
                border-color: #c12668 !important;
                box-shadow: 0 0 0 4px rgba(193, 38, 104, 0.2) !important;
            }

        /* Gradient Buton */
        .btn-gradient {
            background: linear-gradient(90deg, #c12668 0%, #ff5e62 100%);
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-weight: 600;
            color: white;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s;
        }

            .btn-gradient:hover {
                filter: brightness(1.1);
                box-shadow: 0 8px 20px rgba(193, 38, 104, 0.4);
                transform: scale(1.02);
            }

        .brand-logo {
            font-size: 2rem;
            font-weight: 800;
            background: -webkit-linear-gradient(#fff, #ccc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
        }

        .text-muted-custom {
            color: rgba(255, 255, 255, 0.6) !important;
        }

        /* Animasyon */
        .fade-in-up {
            animation: fadeInUp 0.8s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>

    <div class="auth-wrapper">
        <div class="glass-card fade-in-up">
            <div class="text-center mb-5">
                <h1 class="brand-logo">Bebop</h1>
                <p class="text-muted-custom">Müziğin kalbine giriş yapın</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger border-0 bg-danger-transparent text-white" style="background: rgba(220, 53, 69, 0.2);">
                    <small>@ViewBag.Error</small>
                </div>
            }

            <form asp-controller="Auth" asp-action="SignIn" method="post">
                <div class="form-group mb-4">
                    <label class="text-white-50 small ml-1">Email Adresi</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="ad@domain.com" required>
                </div>

                <div class="form-group mb-2">
                    <label class="text-white-50 small ml-1">Şifre</label>
                    <input asp-for="PasswordHash" type="password" class="form-control" placeholder="••••••••" required>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="checkbox">
                        <label class="ui-check text-muted-custom mb-0">
                            <input type="checkbox">
                            <i class="border-white-50"></i> <small>Beni Hatırla</small>
                        </label>
                    </div>
                    <a href="#" class="text-muted-custom small">Şifremi Unuttum?</a>
                </div>

                <button type="submit" class="btn btn-gradient btn-block shadow-lg">Oturum Aç</button>

                <div class="text-center mt-4">
                    <span class="text-muted-custom small">Hesabınız yok mu?</span>
                    <a href="/Auth/SignUp" class="text-white font-weight-bold small ml-1">Hemen Kaydol</a>
                </div>
            </form>
        </div>
    </div>

    <script src="/Bebop/libs/jquery/dist/jquery.min.js"></script>
    <script src="/Bebop/libs/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>