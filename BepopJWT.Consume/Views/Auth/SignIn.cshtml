@model LoginDTO
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null; // Giriş sayfasında menü olmasın diye
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Giriş Yap | Bepop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" href="/Bebop/assets/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="/Bebop/assets/css/theme.css" type="text/css" />
    <link rel="stylesheet" href="/Bebop/assets/css/style.css" type="text/css" />
</head>
<body class="layout-row bg-dark">
    <div class="d-flex flex-column flex">
        <div class="row no-gutters h-100">

            <div class="col-md-6 bg-dark bg-img" style="background-image:url('/Bebop/assets/img/b6.jpg')">
                <div class="p-3 p-md-5 d-flex flex-column h-100">
                    <h4 class="mb-3 text-white">Bepop</h4>
                    <div class="text-fade">Müzik Web Uygulaması</div>
                </div>
            </div>

            <div class="col-md-6" id="content-body">
                <div class="p-3 p-md-5">
                    <h5>Tekrar Hoşgeldiniz</h5>
                    <p><small class="text-muted">Hesabınızı yönetmek için giriş yapın</small></p>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }

                    <form asp-controller="Auth" asp-action="SignIn" method="post">

                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email adresiniz" required>
                        </div>

                        <div class="form-group">
                            <label>Şifre</label>
                            <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Şifreniz" required>

                            <div class="my-3 text-right">
                                <a href="#" class="text-muted">Şifremi Unuttum?</a>
                            </div>
                        </div>

                        <div class="checkbox mb-3">
                            <label class="ui-check">
                                <input type="checkbox">
                                <i></i> Beni Hatırla
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary mb-4 btn-block">Giriş Yap</button>

                        <div>
                            Hesabınız yok mu?
                            <a href="/Auth/SignUp" class="text-primary">Kayıt Ol</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/Bebop/libs/jquery/dist/jquery.min.js"></script>
    <script src="/Bebop/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="/Bebop/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/Bebop/assets/js/theme.js"></script>
</body>
</html>