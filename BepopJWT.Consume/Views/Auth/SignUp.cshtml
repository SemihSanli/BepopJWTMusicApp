@model RegisterDTO
@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bebop | Aramıza Katıl</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: #0f0c29; /* Fallback */
            background: linear-gradient(135deg, #24243e, #302b63, #0f0c29);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            position: relative;
        }

        /* Arka plan süslemeleri (Yuvarlak ışıklar) */
        .circle {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            z-index: 0;
            opacity: 0.6;
        }

        .circle-1 {
            width: 300px;
            height: 300px;
            background: #ff00cc;
            top: -50px;
            left: -50px;
        }

        .circle-2 {
            width: 400px;
            height: 400px;
            background: #333399;
            bottom: -100px;
            right: -100px;
        }

        /* Cam Efektli Kart */
        .register-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 40px;
            width: 400px;
            max-width: 90%;
            z-index: 1;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            color: #fff;
        }

            .register-card h2 {
                text-align: center;
                margin-bottom: 10px;
                font-weight: 600;
                letter-spacing: 1px;
                color: #fff;
            }

        .sub-text {
            text-align: center;
            font-size: 0.85rem;
            color: #ccc;
            margin-bottom: 30px;
        }

        .input-group {
            margin-bottom: 20px;
            position: relative;
        }

            .input-group label {
                display: block;
                margin-bottom: 5px;
                font-size: 0.8rem;
                color: #aaa;
                margin-left: 5px;
            }

            .input-group input {
                width: 100%;
                padding: 12px 15px;
                background: rgba(255, 255, 255, 0.07);
                border: 1px solid rgba(255, 255, 255, 0.1);
                border-radius: 10px;
                color: #fff;
                outline: none;
                transition: 0.3s;
            }

                .input-group input:focus {
                    border-color: #ff00cc;
                    background: rgba(255, 255, 255, 0.15);
                    box-shadow: 0 0 10px rgba(255, 0, 204, 0.2);
                }

        /* Dosya Yükleme Alanı Özelleştirme */
        .file-upload {
            position: relative;
            display: inline-block;
            width: 100%;
        }

            .file-upload input[type="file"] {
                padding: 10px;
                font-size: 0.8rem;
                background: rgba(255, 255, 255, 0.05);
            }

        .btn-submit {
            width: 100%;
            padding: 12px;
            background: linear-gradient(90deg, #ff00cc, #333399);
            border: none;
            border-radius: 30px;
            color: #fff;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
            margin-top: 10px;
            box-shadow: 0 5px 15px rgba(255, 0, 204, 0.3);
        }

            .btn-submit:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(255, 0, 204, 0.5);
                background: linear-gradient(90deg, #d600ad, #28287a);
            }

        .login-link {
            text-align: center;
            margin-top: 20px;
            font-size: 0.85rem;
            color: #ccc;
        }

            .login-link a {
                color: #ff00cc;
                text-decoration: none;
                font-weight: 600;
                margin-left: 5px;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

        /* Responsive Ayar */
        @@media (max-width: 480px) {
            .register-card

        {
            padding: 30px 20px;
        }

        }
    </style>
</head>
<body>

    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>

    <div class="register-card">
        <h2>BEPOP</h2>
        <p class="sub-text">Müzik dünyasına adım at.</p>

        <form asp-controller="Auth" asp-action="SignUp" method="post" enctype="multipart/form-data">

            <div class="input-group">
                <label><i class="fas fa-user"></i> Kullanıcı Adı</label>
                <input asp-for="Username" type="text" placeholder="Örn: muziksever" required autocomplete="off" />
            </div>

            <div class="input-group">
                <label><i class="fas fa-id-card"></i> Ad Soyad</label>
                <input asp-for="FullName" type="text" placeholder="Adınız Soyadınız" required autocomplete="off" />
            </div>

            <div class="input-group">
                <label><i class="fas fa-envelope"></i> Email</label>
                <input asp-for="Email" type="email" placeholder="ornek@email.com" required autocomplete="off" />
            </div>

            <div class="input-group">
                <label><i class="fas fa-lock"></i> Şifre</label>
                <input asp-for="PasswordHash" type="password" placeholder="********" required />
            </div>

            <div class="input-group">
                <label><i class="fas fa-camera"></i> Profil Resmi</label>
                <div class="file-upload">
                    <input asp-for="ProfileImage" type="file" accept="image/*" />
                </div>
            </div>

            <button type="submit" class="btn-submit">Kayıt Ol</button>

            <div class="login-link">
                Zaten hesabın var mı? <a href="/Auth/SignIn">Giriş Yap</a>
            </div>
        </form>
    </div>

</body>
</html>
</html>

