@model RegisterDTO
@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-US" dir="ltr">
<head>
    <meta charset="utf-8" />
    <title>Signup | Bepop - Music Web Application</title>
    <meta name="description" content="Responsive, Bootstrap, BS4" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <!-- style -->
    <!-- build:css ../assets/css/site.min.css -->
    <link rel="stylesheet" href="/Bebop/libs/slick-carousel/slick/slick.css" type="text/css" />
    <link rel="stylesheet" href="/Bebop/libs/slick-carousel/slick/slick-theme.css" type="text/css" />
    <link rel="stylesheet" href="/Bebop/assets/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="/Bebop/assets/css/theme.css" type="text/css" />
    <link rel="stylesheet" href="/Bebop/assets/css/style.css" type="text/css" />
    <!-- endbuild -->
</head>
<body class="layout-row bg-dark">
    <div class="d-flex flex-column flex">
        <div class="row no-gutters h-100">
            <div class="col-md-6 bg-dark bg-img" style="background-image:url(/Bebop/assets/img/b7.jpg)">
                <div class="p-3 p-md-5 d-flex flex-column h-100">
                    <h4 class="mb-3 text-white">Bepop</h4>
                    <div class="text-fade">Music Web Application</div>
                    <div class="d-flex flex align-items-center justify-content-center">
                    </div>
                    <div class="d-flex text-sm text-fade">
                        <a href="index.html" class="text-white">About</a>
                        <span class="flex"></span>
                        <a href="#" class="text-white mx-1">Terms</a>
                        <a href="#" class="text-white mx-1">Policy</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6" id="content-body">
                <div class="p-3 p-md-5">
                    <h5>Welcome to Bepop</h5>
                    <p>
                        <small class="text-muted">Sign up with your social network</small>
                    </p>
                    <div class="">
                        <form asp-controller="Auth" asp-action="SignUp" method="post" enctype="multipart/form-data">

                            <div class="form-group">
                                <label>Kullanıcı Adı</label>
                                <input asp-for="Username" type="text" class="form-control" required />
                            </div>

                            <div class="form-group">
                                <label>Ad Soyad</label>
                                <input asp-for="FullName" type="text" class="form-control" required />
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" type="email" class="form-control" required />
                            </div>

                            <div class="form-group">
                                <label>Şifre</label>
                                <input asp-for="PasswordHash" type="password" class="form-control" required />
                            </div>

                            <div class="form-group">
                                <label>Profil Resmi</label>
                                <input asp-for="ProfileImage" type="file" class="form-control border-0 p-0" />
                            </div>

                            <button type="submit" class="btn btn-primary mb-4 btn-block">Kayıt Ol</button>

                            <div>
                                Zaten üye misin? <a href="/Auth/SignIn" class="text-primary">Giriş Yap</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- build:js ../assets/js/site.min.js -->
    <!-- jQuery -->
    <script src="/Bebop/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="/Bebop/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="/Bebop/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- ajax page -->
@*     <script src="/Bebop/libs/pjax/pjax.min.js"></script>
    <script src="/Bebop/assets/js/ajax.js"></script> *@
    <!-- lazyload plugin -->
    <script src="/Bebop/assets/js/lazyload.config.js"></script>
    <script src="/Bebop/assets/js/lazyload.js"></script>
    <script src="/Bebop/assets/js/plugin.js"></script>
    <!-- scrollreveal -->
    <script src="/Bebop/libs/scrollreveal/dist/scrollreveal.min.js"></script>
    <script src="/Bebop/libs/slick-carousel/slick/slick.min.js"></script>
    <!-- feather icons -->
    <script src="/Bebop/libs/feather-icons/dist/feather.min.js"></script>
    <!-- theme -->
    <script src="/Bebop/assets/js/theme.js"></script>
    <!-- endbuild -->
</body>
</html>

